html #application.dark, body #application.dark
  background #121212
  color #f3f5fa

  a
    color #f3f5fa

.dark-icon
  fill: #FFF9C4

#application:not(code).dark  
  .created-at-icon, .updated-at-icon
    fill: #f3f5fa

  .card, .ctf_content, .sidebar section
    background #2f2f3f

    &:hover, &:focus, &:active
      &:after
        background: #fcfcfc11;
        color: #f3f5fa;
